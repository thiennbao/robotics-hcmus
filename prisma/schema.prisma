datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Role {
    ROOT
    ADMIN
}

model Contact {
    title   String @id
    address String
    order   Int
}

model Banner {
    name    String @id
    image   String
    address String
    order   Int
}

model Course {
    name         String     @id
    thumbnail    String
    brief        String
    overview     String
    organization String
    description  String
    time         String
    gallery      String[]
    Register     Register[]
    date         DateTime   @default(now())
    order        Int
}

model News {
    title     String   @id
    thumbnail String
    content   String
    date      DateTime @default(now())
}

model Competition {
    title       String @id
    address     String
    description String
    thumbnail   String
    order       Int
}

model Message {
    id      String   @id @default(uuid())
    name    String
    email   String
    phone   String
    message String
    read    Boolean  @default(false)
    date    DateTime @default(now())
}

model Register {
    id         String   @id @default(uuid())
    courseId   String
    course     Course   @relation(fields: [courseId], references: [name], onDelete: Cascade)
    name       String
    parentName String
    dob        DateTime
    email      String
    phone      String
    time       String
    read       Boolean  @default(false)
    date       DateTime @default(now())
}

model User {
    username String   @id
    password String
    role     Role     @default(ADMIN)
    date     DateTime @default(now())
}
